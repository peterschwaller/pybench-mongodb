{
    // Set the defaults for ALL databases.
    "testcase-defaults": {
        "db-name": "pybench",
        "collection": "MyData",
        "random-text-buffer-size": 1000000,
        "random-bytes-buffer-size": 1000000,
        "max-iterations": 1000000,
        "max-time-seconds": 60*60*4,
        "batch-size": 1000,

        // Valid values for xyz-method:
        // "unordered-bulk"
        // "ordered-bulk"
        // "array" -- only valid for insert .insert(array)
        // "single" -- one at a time
        "batch-method": "array",

        "rate-limit": 0,  // 0=no limit, otherwise set to operations per second

        "threads": 10,
        "processes": 1,
        "write-concern": {

        },

        "feedback-operations": 10000,  // -1 for none
        "feedback-seconds": 5,         // -1 for none

    },
    "testcases": {
        "startup": {
            "create indexes": {
                "operation": "index",
                "indexes": {
                    "MyData": [
                        {
                            "index": [["msgID", 1]],
                            "kwargs": {
                                "unique": true,
                                "partialFilterExpression": {"msgID": {"$exists": 1}}
                            },
                        },
                        {
                            "index": [["status", 1],["date", 1]],
                        },
                    ]
                }
            },
        },
        "testing": {
            "insert data": {
                "operation": "insert",
                "max-iterations": 1000000,
                "max-time-seconds": 60*60,
                "doc": {
                    "status": {
                        "random-list": ["ready", "running", "repeated"]
                    },
                    "date": {
                        "date": 0  // offset in +- seconds from current time
                    }
                    "guid": {
                        "uuid": null
                    },
                    "guid-string": {
                        "uuid-string": null
                    },
                    "number": {
                        "random-int": [0, 10000]
                    },
                    "address": {
                        "random-text": {
                            "random-int": [500, 2500]
                        }
                    },
                    "image": {
                        "random-bytes": 100  // number of bytes
                    },
                    "version": 1,
                }
            },
        },
        "cleanup": {

        }
    }
}
